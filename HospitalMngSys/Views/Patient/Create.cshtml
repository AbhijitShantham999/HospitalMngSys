@model HospitalMngSys.Models.Patient

<h2 class="text-2xl font-bold mb-4">Create Patient</h2>

<form asp-action="Create" asp-controller="Patient" method="post" class="space-y-4 max-w-lg">
    @* @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-red-500 mb-2"></div> *@

    <div>
        <label asp-for="Name" class="block text-gray-400 font-bold mb-1"></label>
        <input asp-for="Name" class="border border-gray-300 bg-[#0E1624] rounded-md w-full p-2" />
        <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Age" class="block text-gray-400 font-bold mb-1"></label>
        <input asp-for="Age" type="number" class="border border-gray-300 bg-[#0E1624] rounded-md w-full p-2" />
        <span asp-validation-for="Age" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Gender" class="block text-gray-400 font-bold mb-1"></label>
        <select asp-for="Gender" class="form-control border border-gray-300 bg-[#0E1624] rounded-md w-full p-2">
            <option value="">Select Gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Others">Others</option>
        </select>
        <span asp-validation-for="Gender" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Phonenum" class="block text-gray-400 font-bold mb-1"></label>
        <input asp-for="Phonenum" class="border border-gray-300 bg-[#0E1624] rounded-md w-full p-2" />
        <span asp-validation-for="Phonenum" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Address" class="block text-gray-400 font-bold mb-1"></label>
        <textarea asp-for="Address" class="border border-gray-300 bg-[#0E1624] rounded-md w-full p-2"></textarea>
        <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
    </div>

    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">
        Create Patient
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
